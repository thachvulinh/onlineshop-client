<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Đổi mật khẩu</h3>
        </div>
    </div>
</section>
<div id="top_form_users_address"></div>
<section class="product_area" style="padding: 30px 0px;">
    <div class="container-fluid">
        <div class="card">
            <%- include('../layouts/menu_user',{active:'password'}) %>
            <div class="card-body" style="padding:10px">
                    <form id="form_users_update_password">
                        <input type="hidden" name="id" id="id" value="<%=info._id%>"/>
                        <div class="row">
                            <div class="col-md-5">
                                <img src="../../img/blog/column/blog-c-1.jpg" style="width:100%; height:100%">
                            </div>
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label for="username">Tài khoản</label>
                                    <input type="text"  name ="username" class="form-control" value="<%=(info.username?info.username:'')%>" name="password" id="password"  placeholder="Nhập tài khoản" <%=(info.username?'readonly':'')%>>
                                </div>
                                <%if(info.password){%>
                                <div class="form-group">
                                    <label for="password">Mật khẩu hiện tại</label>
                                    <input type="password" class="form-control" name="password" id="password"  placeholder="Mật khẩu hiện tại">
                                </div>
                                <%}%>
                                <div class="form-group">
                                    <label for="password_new">Mật khẩu mới</label>
                                    <input type="password" class="form-control" name="password_new" id="password_new"  placeholder="Mật khẩu mới">
                                   
                                </div>
                                <div class="form-group">
                                    <label for="password_reply">Mật khẩu xác thực</label>
                                    <input type="password" class="form-control" name="password_reply" id="password_reply"  placeholder="Mật khẩu xác thực">
                                </div>
                                <button type="button" class="btn btn-success float-right btn-sm" onclick="users.update_password()"> <i class="fa fa-floppy-o"></i> Lưu</button>
                            </div>
                        </div>
                    </form>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="../../js/controller/user_ctr.js"></script>