<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3><%=(info_category.name?info_category.name:keywords)%></h3>
            <% if(info_category.name){%>
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li><a href="/" class="disabled-link">Sản phẩm</a></li>
