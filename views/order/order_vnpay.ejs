<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Thanh toán VNPAY</h3>
        </div>
    </div>
</section>
<section class="product_area" style="padding: 30px 0px;">
    <div class="container">
        <form action="/orders/create_payment_url" method="POST" >
            <input type="hidden" name="product_id" id="product_id" value="<%=product_id%>">
            <input type="hidden" name="product_price_id" id="product_price_id" value="<%=product_price_id%>">
            <input type="hidden" name="user_id" id="user_id" value="<%=user_id%>">
            <input type="hidden" name="receiver" id="receiver" value="<%=receiver%>">
            <input type="hidden" name="receiver_phone" id="receiver_phone" value="<%=receiver_phone%>">
            <input type="hidden" name="receiver_address" id="receiver_address" value="<%=receiver_address%>">
            <input type="hidden" name="receiver_postcode" id="receiver_postcode" value="<%=receiver_postcode%>">
            <input type="hidden" name="quantity" id="quantity" value="<%=quantity%>">
            <input type="hidden" name="payment" id="payment" value="<%=payment%>">
            <input type="hidden" name="delivery_price" id="delivery_price" value="<%=delivery_price%>">
            <input type="hidden" name="amount" id="amount" value="<%=_total_price%>">
            <input type="hidden" name="orderType" id="orderType" value="billpayment">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="text-center">Thanh toán VNPAY</h3>
                            <h4 class="text-center"> <%=common.number_format(_total_price)%> VND</h4>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"> Ngân hàng</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="bankCode" name="bankCode">
                                        <%if(JSON.stringify(list_bank)!="[]"){
                                            list_bank.forEach(function(item,key){ %>
                                                <option value="<%=item.value%>"> <%=item.name%></option>
                                            <%})
                                        }%>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"> Ngôn ngữ</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="language" name="language">
                                        <option value="vn">Tiếng Việt</option>
                                        <option value="en"> English</option>
                                        <option value="fashion"> Thời trang</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label"> Nội dung thanh toán</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="orderDescription" name="orderDescription" rows="4"  ><%=description%></textarea>
                                </div>
                            </div>
                            <button class="btn btn-default float-right" type="submit">Thanh toán</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
            <!-- <div class="form-group">
                <label> Loại hàng hóa</label>
                <select class="form-control" id="orderType" name="orderType">
                    <option value="topup"> Nạp tiền điện thoại</option>
                    <option value="billpayment"> Thanh toán hóa đơn</option>
                    <option value="fashion"> Thời trang</option>
                </select>
            </div> -->
        </form>
    </div>
</section>
