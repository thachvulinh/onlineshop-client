<footer class="footer_area">
    <div class="footer_widgets">
        <div class="container">
            <div class="row footer_wd_inner">
                <div class="col-lg-5 col-12">
                    <aside class="f_widget f_about_widget" style="min-height:300px;">
                        <img src="<%=info_website_master.logo%>"  class="app-logo-spin" style="border-radius: 50%;width:120px;" alt="" >
                        <span style="font-size:30px;color: #fff;font-family:'Playfair Display', serif; "> <%=info_website_master.name%></span>
                        <p><%=info_website_master.info%></p>
                        <ul class="nav">
                            <%if(info_website_master.facebook){%>
                                <li><a href="<%=info_website_master.facebook%>"><i class="fa fa-facebook"></i></a></li>
                            <%}%>
                            <%if(info_website_master.zalo){%>
                                <li><a href="<%=info_website_master.zalo%>"><img src="../../img/zalo.png" style="width:20px;margin-bottom: 5px"></a></li>
                            <%}%>
                        </ul>
                    </aside>
                </div>
                <div class="col-lg-3 col-12">
                    <aside class="f_widget f_link_widget" style="min-height:300px;">
                        <div class="f_title">
                            <h3>Đường dẫn</h3>
                        </div>
                        <ul class="list_style">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="/introduce">Giới thiệu</a></li>
                            <li><a href="/products/all?page=1">Sản phẩm</a></li>
                            <li><a href="/posts">Bài viết</a></li>
                        </ul>
                    </aside>
                </div>
                <div class="col-lg-4 col-12" >
                    <aside class="f_widget f_contact_widget" style="min-height:300px;">
                        <div class="f_title">
                            <h3>Liên hệ</h3>
                        </div>
                        <h4><%=info_website_master.phone %></h4>
                        <p><%=info_website_master.address %></p>
                        <h5><%=info_website_master.email %></h5>
                    </aside>
                </div>
            </div>
        </div>
    </div>
    <div class="footer_copyright">
        <div class="container">
            <div class="copyright_inner">
                <div class="float-left">
                    <!-- <h5><a target="_blank" href="https://www.templatespoint.net">Templates Point</a></h5> -->
                </div>
                <div class="float-right">
                    <!-- <a href="#">Purchase Now</a> -->
                </div>
            </div>
        </div>
